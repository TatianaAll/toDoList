<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Todo - ajout d'une tâche</title>
</head>
<body>
<header>
    <nav>
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link active" href="http://localhost/revision-toDo/todolist/public/">Menu</a>
            </li>
        </ul>
    </nav>
</header>
<main>
    <h2 class="text-center">Liste des tâches</h2>

    <form method="POST" action="http://localhost/revision-toDo/todolist/public/add-task">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="newTaskName" placeholder="Nouvelle tache"
                   aria-label="ajout nouvelle tache">

            <div class="input-group-append">
                <button class="btn btn-primary rounded-right" type="submit" id="newTaskName">Ajouter</button>
            </div>
        </div>
    </form>

    {{ message }}

    <table class="table table-hover table-striped">
        <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Statut</th>
            <th scope="col">Action</th>
        </tr>
        </thead>

        <tbody>

        {% if tasks is not empty %}
            {% for task in tasks %}
                <tr>
                    <th scope="row">{{ task.id }}</th>
                    <td>{{ task.name }}</td>
                    <td>
                        {% if task.statut is same as("non terminé") %}
                            <span class="badge bg-warning">{{ task.statut }}</span>
                        {% else %}
                            <span class="badge bg-success">{{ task.statut }}</span>
                        {% endif %}
                    </td>
                    <td></td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <th scope="row"></th>
                <td>Pas de tâche pour le moment</td>
                <td></td>
                <td></td>
            </tr>
        {% endif %}

        </tbody>
    </table>
</main>

</body>
</html>